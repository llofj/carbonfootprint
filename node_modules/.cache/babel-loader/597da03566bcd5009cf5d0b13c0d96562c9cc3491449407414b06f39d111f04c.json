    _context.next = 11;\n              return response.json();\n            case 11:\n              data = _context.sent;\n              if (!(data && data.carbon_reduction !== undefined)) {\n                _context.next = 17;\n                break;\n              }\n              newValue = parseFloat(data.carbon_reduction) || 0; // 如果是刷新数据且值有变化，使用动画过渡\n              if (isRefresh && _this3.userCarbonReduction !== newValue) {\n                oldValue = _this3.userCarbonReduction;\n                _this3.userCarbonReduction = newValue;\n\n                // 增加卡片高亮动画\n                if (_this3.$refs.userInfoCard) {\n                  _this3.$refs.userInfoCard.classList.add('highlight-update');\n                  setTimeout(function () {\n                    _this3.$refs.userInfoCard.classList.remove('highlight-update');\n                  }, 2000);\n                }\n\n                // 重新触发数字动画\n                _this3.animateCountUp();\n              } else {\n                // 首次加载直接设置\n                _this3.userCarbonReduction = newValue;\n              }\n\n              // 完成刷新\n              _this3.isRefreshing = false;\n              return _context.abrupt(\"return\");\n            case 17:\n              _context.next = 19;\n              return fetch('http://localhost:5000/api/achievement/carbon-reduction', {\n                headers: {\n                  'Authorization': \"Bearer \".concat(token)\n                },\n                cache: 'no-cache'\n              });\n            case 19:\n              achievementResponse = _context.sent;\n              if (!achievementResponse.ok) {\n                _context.next = 25;\n                break;\n              }\n              _context.next = 23;\n              return achievementResponse.json();\n            case 23:\n              _data = _context.sent;\n              _this3.userCarbonReduction = parseFloat(_data.carbon_reduction) || 0;\n            case 25:\n              _context.next = 31;\n              break;\n            case 27:\n              _context.prev = 27;\n              _context.t0 = _context[\"catch\"](1);\n              console.error('获取用户减碳数据失败:', _context.t0);\n              _this3.userCarbonReduction = 0;\n            case 31:\n              _context.prev = 31;\n              _this3.isRefreshing = false;\n              return _context.finish(31);\n            case 34:\n            case \"end\":\n              return _context.stop();\n          }\n        }, _callee, null, [[1, 27, 31, 34]]);\n      }))();\n    },\n    switchToEmissionCalculator: function switchToEmissionCalculator() {\n      this.$router.push('/calculator');\n    },\n    goHome: function goHome() {\n      this.$router.push('/');\n    }\n  }\n};","map":{"version":3,"names":["CarbonReductionCalculator","useRouter","name","components","data","isLoggedIn","username","userCarbonReduction","isRefreshing","computed","treeEquivalent","Math","max","round","created","token","localStorage","getItem","loadUserCarbonReduction","mounted","_this","setTimeout","animationTriggered","animateCountUp","methods","onReductionSaved","reduction","_this2","countElements","document","querySelectorAll","forEach","el","target","parseFloat","textContent","current","increment","timer","setInterval","clearInterval","toFixed","_arguments","arguments","_this3","_asyncToGenerator","_regeneratorRuntime","mark","_callee","isRefresh","response","newValue","oldValue","achievementResponse","_data","wrap","_callee$","_context","prev","next","length","undefined","abrupt","fetch","headers","concat","cache","sent","ok","json","carbon_reduction","$refs","userInfoCard","classList","add","remove","t0","console","error","finish","stop","switchToEmissionCalculator","$router","push","goHome"],"sources":["D:\\EcoPaw\\carbonfootprint\\src\\views\\CarbonReductionPage.vue"],"sourcesContent":["<template>\r\n  <div class=\"carbon-reduction-page\">\r\n    <div class=\"calculator-container\">\r\n      <div class=\"back-to-home\">\r\n        <button @click=\"goHome\" class=\"back-btn\">\r\n          <i class=\"fas fa-home\"></i> 返回主页\r\n        </button>\r\n      </div>\r\n      <div class=\"page-content\">\r\n        <h1 class=\"page-title\">减碳计算器</h1>\r\n        <p class=\"description\">记录您的减碳行为，为环保贡献力量</p>\r\n        \r\n        <!-- 用户信息横向长条卡片 -->\r\n        <div class=\"user-info-banner\" v-if=\"isLoggedIn\" ref=\"userInfoCard\">\r\n          <div class=\"banner-glow\"></div>\r\n          <div class=\"banner-content\">\r\n            <div class=\"user-section\">\r\n              <div class=\"user-avatar\">\r\n                <i class=\"fas fa-user-circle pulse\"></i>\r\n                <div class=\"avatar-ring\"></div>\r\n              </div>\r\n              <div class=\"user-name\">{{ username }}</div>\r\n            </div>\r\n            \r\n            <div class=\"metrics-section\">\r\n              <div class=\"metric-item\">\r\n                <div class=\"metric-icon\">\r\n                  <i class=\"fas fa-leaf\" :class=\"{'leaf-animation': !isRefreshing, 'refresh-spin': isRefreshing}\"></i>\r\n                </div>\r\n                <div class=\"metric-data\">\r\n                  <div class=\"metric-value count-up\">{{ userCarbonReduction.toFixed(1) }}</div>\r\n                  <div class=\"metric-label\">kgCO₂e 减碳量</div>\r\n                </div>\r\n              </div>\r\n              \r\n              <div class=\"metric-divider\"></div>\r\n              \r\n              <div class=\"metric-item\">\r\n                <div class=\"metric-icon\">\r\n                  <i class=\"fas fa-tree\" :class=\"{'tree-animation': !isRefreshing, 'refresh-spin': isRefreshing}\"></i>\r\n                </div>\r\n                <div class=\"metric-data\">\r\n                  <div class=\"metric-value count-up\">{{ treeEquivalent }}</div>\r\n                  <div class=\"metric-label\">棵树等效</div>\r\n                </div>\r\n              </div>\r\n            </div>\r\n          </div>\r\n        </div>\r\n        \r\n        <div class=\"switch-calculator\">\r\n          <button class=\"switch-btn\" @click=\"switchToEmissionCalculator\">\r\n            <i class=\"fas fa-exchange-alt\"></i>\r\n            切换到碳排放计算器\r\n          </button>\r\n        </div>\r\n        <CarbonReductionCalculator @reduction-saved=\"onReductionSaved\" />\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport CarbonReductionCalculator from '@/components/CarbonReductionCalculator.vue'\r\nimport { useRouter } from 'vue-router'\r\n\r\nexport default {\r\n  name: 'CarbonReductionPage',\r\n  components: {\r\n    CarbonReductionCalculator\r\n  },\r\n  data() {\r\n    return {\r\n      isLoggedIn: false,\r\n      username: '',\r\n      userCarbonReduction: 0,\r\n      isRefreshing: false\r\n    }\r\n  },\r\n  computed: {\r\n    treeEquivalent() {\r\n      // 每棵树平均每年吸收约21kg CO2\r\n      return Math.max(1, Math.round(this.userCarbonReduction / 21));\r\n    }\r\n  },\r\n  created() {\r\n    // 检查用户是否登录\r\n    const token = localStorage.getItem('token');\r\n    if (token) {\r\n      this.isLoggedIn = true;\r\n      this.username = localStorage.getItem('username') || '环保达人';\r\n      this.loadUserCarbonReduction();\r\n    }\r\n  },\r\n  mounted() {\r\n    // 添加动画触发器\r\n    setTimeout(() => {\r\n      this.animationTriggered = true;\r\n      this.animateCountUp();\r\n    }, 500);\r\n  },\r\n  methods: {\r\n    // 接收子组件保存成功的事件\r\n    onReductionSaved(reduction) {\r\n      // 显示刷新动画\r\n      this.isRefreshing = true;\r\n      \r\n      // 延迟刷新数据，确保后端数据已更新\r\n      setTimeout(() => {\r\n        this.loadUserCarbonReduction(true);\r\n      }, 1500);\r\n    },\r\n    // 数字增长动画\r\n    animateCountUp() {\r\n      const countElements = document.querySelectorAll('.count-up');\r\n      countElements.forEach(el => {\r\n        const target = parseFloat(el.textContent);\r\n        let current = 0;\r\n        const increment = target / 30; // 分30步完成\r\n        const timer = setInterval(() => {\r\n          current += increment;\r\n          if (current >= target) {\r\n            clearInterval(timer);\r\n            current = target;\r\n          }\r\n          el.textContent = current.toFixed(1);\r\n        }, 30);\r\n      });\r\n    },\r\n    async loadUserCarbonReduction(isRefresh = false) {\r\n      try {\r\n        const token = localStorage.getItem('token');\r\n        if (!token) return;\r\n        \r\n        // 首先尝试从排行榜获取数据\r\n        const response = await fetch('http://localhost:5000/api/leaderboard/user', {\r\n          headers: {\r\n            'Authorization': `Bearer ${token}`\r\n          },\r\n          // 添加缓存破坏参数确保获取最新数据\r\n          cache: 'no-cache'\r\n        });\r\n        \r\n        if (response.ok) {\r\n          const data = await response.json();\r\n          if (data && data.carbon_reduction !== undefined) {\r\n            const newValue = parseFloat(data.carbon_reduction) || 0;\r\n            \r\n            // 如果是刷新数据且值有变化，使用动画过渡\r\n            if (isRefresh && this.userCarbonReduction !== newValue) {\r\n              const oldValue = this.userCarbonReduction;\r\n              this.userCarbonReduction = newValue;\r\n              \r\n              // 增加卡片高亮动画\r\n              if (this.$refs.userInfoCard) {\r\n                this.$refs.userInfoCard.classList.add('highlight-update');\r\n                setTimeout(() => {\r\n                  this.$refs.userInfoCard.classList.remove('highlight-update');\r\n                }, 2000);\r\n              }\r\n              \r\n              // 重新触发数字动画\r\n              this.animateCountUp();\r\n            } else {\r\n              // 首次加载直接设置\r\n              this.userCarbonReduction = newValue;\r\n            }\r\n            \r\n            // 完成刷新\r\n            this.isRefreshing = false;\r\n            return;\r\n          }\r\n        }\r\n        \r\n        // 如果排行榜数据获取失败，尝试从成就系统获取\r\n        const achievementResponse = await fetch('http://localhost:5000/api/achievement/carbon-reduction', {\r\n          headers: {\r\n            'Authorization': `Bearer ${token}`\r\n          },\r\n          cache: 'no-cache'\r\n        });\r\n        \r\n        if (achievementResponse.ok) {\r\n          const data = await achievementResponse.json();\r\n          this.userCarbonReduction = parseFloat(data.carbon_reduction) || 0;\r\n        }\r\n      } catch (error) {\r\n        console.error('获取用户减碳数据失败:', error);\r\n        this.userCarbonReduction = 0;\r\n      } finally {\r\n        this.isRefreshing = false;\r\n      }\r\n    },\r\n    switchToEmissionCalculator() {\r\n      this.$router.push('/calculator')\r\n    },\r\n    goHome() {\r\n      this.$router.push('/')\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n.carbon-reduction-page {\r\n  min-height: 100vh;\r\n  background-color: #f8f9fa;\r\n  padding-top: 20px;\r\n}\r\n\r\n.calculator-container {\r\n  max-width: 1200px;\r\n  margin: 0 auto;\r\n  padding: 1rem;\r\n  position: relative;\r\n}\r\n\r\n.page-content {\r\n  display: flex;\r\n  flex-direction: column;\r\n  align-items: center;\r\n  margin-top: 30px;\r\n}\r\n\r\n.page-title {\r\n  color: #1e3d59;\r\n  text-align: center;\r\n  margin-bottom: 0.5rem;\r\n  font-size: 28px;\r\n}\r\n\r\n.description {\r\n  text-align: center;\r\n  color: #666;\r\n  margin-bottom: 1rem;\r\n}\r\n\r\n/* 用户信息横向长条卡片 */\r\n.user-info-banner {\r\n  width: 95%;\r\n  max-width: 800px;\r\n  height: 100px;\r\n  border-radius: 12px;\r\n  margin: 20px 0;\r\n  position: relative;\r\n  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);\r\n  background: linear-gradient(120deg, #111822, #253746);\r\n  overflow: hidden;\r\n  display: flex;\r\n  align-items: center;\r\n}\r\n\r\n.banner-glow {\r\n  position: absolute;\r\n  width: 150%;\r\n  height: 150%;\r\n  top: -25%;\r\n  left: -25%;\r\n  background: radial-gradient(\r\n    ellipse at center,\r\n    rgba(74, 215, 240, 0.3) 0%,\r\n    rgba(46, 187, 161, 0.1) 40%,\r\n    rgba(0, 0, 0,