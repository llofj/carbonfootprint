div class=\"profile-card-content\">\r\n            <div class=\"profile-avatar\">\r\n              <i class=\"fas fa-user-circle\"></i>\r\n              <div class=\"profile-badge\">\r\n                <i class=\"fas fa-medal\"></i>\r\n              </div>\r\n            </div>\r\n            <div class=\"profile-info\">\r\n              <h3 class=\"profile-name\">{{ username }}</h3>\r\n              <div class=\"profile-stats\">\r\n                <div class=\"stat-item\">\r\n                  <div class=\"stat-icon eco-warrior\">\r\n                    <i class=\"fas fa-leaf\"></i>\r\n                  </div>\r\n                  <div class=\"stat-details\">\r\n                    <span class=\"stat-value\">{{ userCarbonReduction.toFixed(1) }}</span>\r\n                    <span class=\"stat-label\">kgCO₂e 总减碳量</span>\r\n                  </div>\r\n                </div>\r\n                <div class=\"stat-item\">\r\n                  <div class=\"stat-icon tree-planter\">\r\n                    <i class=\"fas fa-tree\"></i>\r\n                  </div>\r\n                  <div class=\"stat-details\">\r\n                    <span class=\"stat-value\">{{ treeEquivalent }}</span>\r\n                    <span class=\"stat-label\">棵树等效</span>\r\n                  </div>\r\n                </div>\r\n              </div>\r\n            </div>\r\n          </div>\r\n        </div>\r\n        \r\n        <div class=\"switch-calculator\">\r\n          <button class=\"switch-btn\" @click=\"switchToEmissionCalculator\">\r\n            <i class=\"fas fa-exchange-alt\"></i>\r\n            切换到碳排放计算器\r\n          </button>\r\n        </div>\r\n        <CarbonReductionCalculator />\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport CarbonReductionCalculator from '@/components/CarbonReductionCalculator.vue'\r\nimport { useRouter } from 'vue-router'\r\n\r\nexport default {\r\n  name: 'CarbonReductionPage',\r\n  components: {\r\n    CarbonReductionCalculator\r\n  },\r\n  data() {\r\n    return {\r\n      isLoggedIn: false,\r\n      username: '',\r\n      userCarbonReduction: 0\r\n    }\r\n  },\r\n  computed: {\r\n    treeEquivalent() {\r\n      // 每棵树平均每年吸收约21kg CO2\r\n      return Math.max(1, Math.round(this.userCarbonReduction / 21));\r\n    }\r\n  },\r\n  created() {\r\n    // 检查用户是否登录\r\n    const token = localStorage.getItem('token');\r\n    if (token) {\r\n      this.isLoggedIn = true;\r\n      this.username = localStorage.getItem('username') || '环保达人';\r\n      this.loadUserCarbonReduction();\r\n    }\r\n  },\r\n  methods: {\r\n    async loadUserCarbonReduction() {\r\n      try {\r\n        const token = localStorage.getItem('token');\r\n        if (!token) return;\r\n        \r\n        // 首先尝试从排行榜获取数据\r\n        const response = await fetch('http://localhost:5000/api/leaderboard/user', {\r\n          headers: {\r\n            'Authorization': `Bearer ${token}`\r\n          }\r\n        });\r\n        \r\n        if (response.ok) {\r\n          const data = await response.json();\r\n          if (data && data.carbon_reduction) {\r\n            this.userCarbonReduction = parseFloat(data.carbon_reduction) || 0;\r\n            return;\r\n          }\r\n        }\r\n        \r\n        // 如果排行榜数据获取失败，尝试从成就系统获取\r\n        const achievementResponse = await fetch('http://localhost:5000/api/achievement/carbon-reduction', {\r\n          headers: {\r\n            'Authorization': `Bearer ${token}`\r\n          }\r\n        });\r\n        \r\n        if (achievementResponse.ok) {\r\n          const data = await achievementResponse.json();\r\n          this.userCarbonReduction = parseFloat(data.carbon_reduction) || 0;\r\n        }\r\n      } catch (error) {\r\n        console.error('获取用户减碳数据失败:', error);\r\n        this.userCarbonReduction = 0;\r\n      }\r\n    },\r\n    switchToEmissionCalculator() {\r\n      this.$router.push('/calculator')\r\n    },\r\n    goHome() {\r\n      this.$router.push('/')\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n.carbon-reduction-page {\r\n  min-height: 100vh;\r\n  background-color: #f8f9fa;\r\n  padding-top: 20px;\r\n}\r\n\r\n.calculator-container {\r\n  max-width: 1200px;\r\n  margin: 0 auto;\r\n  padding: 1rem;\r\n  position: relative;\r\n}\r\n\r\n.page-content {\r\n  display: flex;\r\n  flex-direction: column;\r\n  align-items: center;\r\n  margin-top: 30px;\r\n}\r\n\r\n.page-title {\r\n  color: #1e3d59;\r\n  text-align: center;\r\n  margin-bottom: 0.5rem;\r\n  font-size: 28px;\r\n}\r\n\r\n.description {\r\n  text-align: center;\r\n  color: #666;\r\n  margin-bottom: 1rem;\r\n}\r\n\r\n/* 用户信息卡片 - 高级美观版 */\r\n.user-profile-card {\r\n  width: 90%;\r\n  max-width: 540px;\r\n  border-radius: 16px;\r\n  margin: 20px 0;\r\n  position: relative;\r\n  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);\r\n  overflow: hidden;\r\n  background-color: white;\r\n  transition: transform 0.3s ease, box-shadow 0.3s ease;\r\n}\r\n\r\n.user-profile-card:hover {\r\n  transform: translateY(-5px);\r\n  box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);\r\n}\r\n\r\n.profile-card-background {\r\n  height: 80px;\r\n  background: linear-gradient(120deg, #84fab0 0%, #8fd3f4 100%);\r\n  border-radius: 16px 16px 0 0;\r\n}\r\n\r\n.profile-card-content {\r\n  padding: 0 25px 25px;\r\n  position: relative;\r\n}\r\n\r\n.profile-avatar {\r\n  position: relative;\r\n  margin-top: -40px;\r\n  margin-bottom: 20px;\r\n  display: flex;\r\n  justify-content: center;\r\n}\r\n\r\n.profile-avatar i {\r\n  font-size: 80px;\r\n  color: #4CAF50;\r\n  background-color: white;\r\n  border-radius: 50%;\r\n  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);\r\n}\r\n\r\n.profile-badge {\r\n  position: absolute;\r\n  bottom: 0;\r\n  right: 42%;\r\n  background-color: #FF9800;\r\n  color: white;\r\n  border-radius: 50%;\r\n  width: 26px;\r\n  height: 26px;\r\n  display: flex;\r\n  align-items: center;\r\n  justify-content: center;\r\n  border: 2px solid white;\r\n  font-size: 12px;\r\n  box-shado