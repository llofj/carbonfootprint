{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport axios from 'axios';\nimport { API_URLS, axiosConfig } from '../config/api';\n\n// 创建 axios 实例\nvar api = axios.create(axiosConfig);\nexport default {\n  name: 'Navbar',\n  data: function data() {\n    return {\n      isLoggedIn: false,\n      username: ''\n    };\n  },\n  methods: {\n    handleAuthRequired: function handleAuthRequired(path) {\n      // Allow direct access to calculator and carbon-reduction pages without login\n      if (path === '/calculator' || path === '/carbon-reduction') {\n        this.$router.push(path);\n        return;\n      }\n\n      // For other protected routes\n      if (!this.isLoggedIn) {\n        this.$router.push({\n          path: '/login',\n          query: {\n            redirect: path\n          }\n        });\n      } else {\n        this.$router.push(path);\n      }\n    },\n    checkLoginStatus: function checkLoginStatus() {\n      var token = localStorage.getItem('token');\n      this.isLoggedIn = !!token;\n      if (this.isLoggedIn) {\n        this.username = localStorage.getItem('username') || '用户';\n      }\n    },\n    handleLogout: function handleLogout() {\n      localStorage.removeItem('token');\n      localStorage.removeItem('username');\n      this.isLoggedIn = false;\n      this.username = '';\n      this.$router.push('/');\n    },\n    handleStorageChange: function handleStorageChange(event) {\n      if (event.key === 'token' || event.key === 'username') {\n        this.checkLoginStatus();\n      }\n    },\n    handleScroll: function handleScroll() {\n      if (this.$refs.navbar) {\n        if (window.scrollY > 20) {\n          this.$refs.navbar.classList.add('scrolled');\n        } else {\n          this.$refs.navbar.classList.remove('scrolled');\n        }\n      }\n    }\n  },\n  created: function created() {\n    this.checkLoginStatus();\n    window.addEventListener('storage', this.handleStorageChange);\n  },\n  mounted: function mounted() {\n    window.addEventListener('scroll', this.handleScroll);\n  },\n  beforeUnmount: function beforeUnmount() {\n    window.removeEventListener('storage', this.handleStorageChange);\n    window.removeEventListener('scroll', this.handleScroll);\n  }\n};","map":{"version":3,"names":["axios","API_URLS","axiosConfig","api","create","name","data","isLoggedIn","username","methods","handleAuthRequired","path","$router","push","query","redirect","checkLoginStatus","token","localStorage","getItem","handleLogout","removeItem","handleStorageChange","event","key","handleScroll","$refs","navbar","window","scrollY","classList","add","remove","created","addEventListener","mounted","beforeUnmount","removeEventListener"],"sources":["D:\\EcoPaw\\carbonfootprint_本地版\\src\\components\\Navbar.vue"],"sourcesContent":["<template>\r\n  <nav class=\"navbar\" ref=\"navbar\">\r\n    <div class=\"navbar-brand\">\r\n      <router-link to=\"/\" class=\"logo\">EcoPaw</router-link>\r\n    </div>\r\n    <div class=\"navbar-menu\">\r\n      <router-link to=\"/calculator\" class=\"nav-item\">碳计算器</router-link>\r\n      <router-link to=\"/carbon-reduction\" class=\"nav-item\">减碳计算器</router-link>\r\n      <a @click.prevent=\"handleAuthRequired('/pet')\" class=\"nav-item\" :class=\"{ 'disabled': !isLoggedIn }\">虚拟宠物</a>\r\n      <a @click.prevent=\"handleAuthRequired('/achievements')\" class=\"nav-item\" :class=\"{ 'disabled': !isLoggedIn }\">成就系统</a>\r\n      <a @click.prevent=\"handleAuthRequired('/ranking')\" class=\"nav-item\" :class=\"{ 'disabled': !isLoggedIn }\">排名系统</a>\r\n    </div>\r\n    <div class=\"navbar-end\">\r\n      <div v-if=\"!isLoggedIn\" @click=\"$router.push('/login')\" class=\"user-icon\">\r\n        <i class=\"fas fa-user\"></i>\r\n      </div>\r\n      <div v-else class=\"username\">\r\n        {{ username }}\r\n        <button @click=\"handleLogout\" class=\"logout-btn\">退出</button>\r\n      </div>\r\n    </div>\r\n  </nav>\r\n</template>\r\n\r\n<script>\r\nimport axios fro